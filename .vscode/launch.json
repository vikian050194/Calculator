{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        // {
        //     "type": "chrome",
        //     "request": "launch",
        //     "name": "Launch Chrome",
        //     "url": "file://${workspaceFolder}/index.html",
        //     "webRoot": "${workspaceFolder}"
        // },
        {
            "name": "Debug test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "${file}",
                "--no-timeouts",
                "--require",
                "babel-register"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        }
    ]
}